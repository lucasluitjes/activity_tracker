<p id="notice"><%= notice %></p>

<h1>Recurring Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Completed at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recurring_tasks.each do |recurring_task| %>
      <tr>
        <td><%= recurring_task.name %></td>
        <td><%= recurring_task.completed_at %></td>
        <td><%= link_to 'Show', recurring_task %></td>
        <td><%= link_to 'Edit', edit_recurring_task_path(recurring_task) %></td>
        <td><%= link_to 'Destroy', recurring_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recurring Task', new_recurring_task_path %>
