<h2>Activities</h2>
<ul class="list-group">
  <% @activities.each do |activity| %>
    <li class="list-group-item">
      <%= link_to activity.name, activity %>
      <span class="pull-right">
        <small style="margin-right: 16px;">
          <%= "%0.2f" % activity.cycle_completion_hours %>
          /
          <%= "%0.2f" % activity.hours_per_cycle %>
          hours
        </small>
        <%= activity.cycle_completion_percentage.to_i %>%
      </span>
    </li>
  <% end %>
</ul>

<h2>New activity</h2>
<%= form_with(model: Activity.new, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :hours_per_cycle %>
    <%= form.number_field :hours_per_cycle, step: 0.25, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "form-control" %>
  </div>
<% end %>

<h2>Misc</h2>
<ul class="list-group">
  <li class="list-group-item">
    view_cycle_duration
  </li>
  <li class="list-group-item">
    archive_old_cycles
  </li>
  <li class="list-group-item">
    delete_all_cycles
  </li>
</ul>